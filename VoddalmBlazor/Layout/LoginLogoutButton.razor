@using BlazorWasmAuthentication.Services
@using Blazored.LocalStorage
@inject ILocalStorageService LocalStorage
@inject IAuthenticationService AuthenticationService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

@* @inject BlazorWasmAuthentication.Services.AuthenticationService AuthService *@

<AuthorizeView>
    <Authorized>
        <button @onclick="Logout" class="btn btn-danger">Logout</button>
        &nbsp;
        <button @onclick="brokerLogged" class="btn btn-primary">User Account</button>
    </Authorized>
    <NotAuthorized>
        <button @onclick="Login" class="btn btn-primary">Login</button>
        &nbsp;
        <button @onclick="Register" class="btn btn-primary">Register</button>
    </NotAuthorized>
</AuthorizeView>

@code {
    void Login()
    {
        NavigationManager.NavigateTo("login");
    }

    void Register()
    {
        NavigationManager.NavigateTo("register");
    }

    void brokerLogged()
    {
        NavigationManager.NavigateTo("/brokerLoggedIn");
    }

    async Task Logout()
    {
        await AuthenticationService.Logout();
        NavigationManager.NavigateTo("Home");
    }
}